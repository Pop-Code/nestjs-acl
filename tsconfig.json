{
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "declarationMap": true,
        "outDir": "./lib",
        "baseUrl": ".",
        "lib": ["es6", "dom", "esnext.asynciterable"]
    },
    "exclude": ["node_modules", "**/test/**", "*.spec.ts"]
}
