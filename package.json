{
    "name": "nestjs-acl",
    "version": "0.2.5",
    "description": "A nestjs package to check acl rules at runtime",
    "author": "Rmannn <alex.hermann@pop-code.com>",
    "repository": "https://github.com/POP-CODE/nestjs-acl.git",
    "license": "MIT",
    "main": "dist/index.js",
    "scripts": {
        "build": "rm -Rf dist && tsc -b",
        "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status",
        "doc": "rm -Rf ./docs && typedoc && touch ./docs/.nojekyll",
        "lint": "eslint src/**/**.ts",
        "test": "jest",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
    },
    "peerDependencies": {
        "@nestjs/common": "^6 || ^7"
    },
    "dependencies": {
        "debug": "4.3.1",
        "lodash": "4.17.21",
        "accesscontrol": "2.2.1",
        "nest-access-control": "2.0.2"
    },
    "devDependencies": {
        "@nestjs/core": "7.6.15",
        "@nestjs/common": "7.6.15",
        "@nestjs/testing": "7.6.15",
        "@types/node": "15.0.3",
        "reflect-metadata": "0.1.13",
        "rxjs": "6.6.7",
        "jest": "26.6.3",
        "ts-jest": "26.5.4",
        "ts-node": "9.1.1",
        "tsconfig-paths": "3.9.0",
        "typedoc": "0.20.35",
        "typescript": "4.2.4",
        "prettier": "2.2.1",
        "eslint": "7.24.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "@typescript-eslint/eslint-plugin": "4.22.0",
        "@typescript-eslint/parser": "4.22.0",
        "@types/jest": "26.0.22",
        "@types/debug": "4.1.5",
        "eslint-config-prettier": "8.1.0",
        "eslint-config-standard-with-typescript": "20.0.0",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-promise": "4.3.1",
        "eslint-plugin-standard": "5.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.{js,jsx,ts}",
            "!index.ts",
            "!**/test/**"
        ],
        "coverageDirectory": "../coverage"
    },
    "engines": {
        "node": ">=0.10"
    }
}
