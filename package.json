{
    "name": "nestjs-acl",
    "version": "0.2.6",
    "description": "A nestjs package to check acl rules at runtime",
    "author": "Rmannn <alex.hermann@pop-code.com>",
    "repository": "https://github.com/POP-CODE/nestjs-acl.git",
    "license": "MIT",
    "main": "dist/index.js",
    "scripts": {
        "build": "rm -Rf dist && tsc -b",
        "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status",
        "doc": "rm -Rf ./docs && typedoc && touch ./docs/.nojekyll",
        "lint": "eslint src/**/**.ts",
        "test": "jest",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
    },
    "peerDependencies": {
        "@nestjs/common": "^6 || ^7 || ^8"
    },
    "dependencies": {
        "accesscontrol": "2.2.1",
        "debug": "4.3.2",
        "lodash": "4.17.21",
        "nest-access-control": "2.0.2"
    },
    "devDependencies": {
        "@nestjs/common": "8.0.6",
        "@nestjs/core": "8.0.6",
        "@nestjs/testing": "8.0.6",
        "@types/debug": "4.1.7",
        "@types/jest": "27.0.1",
        "@types/node": "16.7.6",
        "@typescript-eslint/eslint-plugin": "4.29.3",
        "@typescript-eslint/parser": "4.29.3",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-config-standard-with-typescript": "20.0.0",
        "eslint-plugin-import": "2.24.1",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-plugin-promise": "5.1.0",
        "jest": "27.0.6",
        "prettier": "2.3.2",
        "reflect-metadata": "0.1.13",
        "rxjs": "7.3.0",
        "ts-jest": "27.0.5",
        "ts-node": "10.2.1",
        "tsconfig-paths": "3.10.1",
        "typedoc": "0.21.6",
        "typescript": "4.3.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.{js,jsx,ts}",
            "!index.ts",
            "!**/test/**"
        ],
        "coverageDirectory": "../coverage"
    },
    "engines": {
        "node": ">=0.10"
    }
}
